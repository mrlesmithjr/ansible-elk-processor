# {{ ansible_managed }}
#
{% if logstash_file_inputs is defined %}
{%   for item in logstash_file_inputs %}
input {
  file {
    path => "{{ item.path }}"
    type => "{{ item.type }}"
    sincedb_path => "{{ logstash_log_dir }}/.{{ item.type }}sincedb"
  }
}
{%   endfor %}
{% endif %}
{% if logstash_inputs is defined %}
{%   for item in logstash_inputs %}
{%     if item.type == "redis" %}
{%       for host in groups['elk-broker-nodes'] %}
input {
  redis {
    host => "{{ host }}"
    data_type => "list"
{%         if item.batch_count is defined %}
    batch_count => "{{ item.batch_count }}"
{%         endif %}
    key => "logstash"
{%         if item.threads is defined %}
    threads => "{{ item.threads }}"
{%         endif %}
  }
}
{%       endfor %}
{%     endif %}
{%     if item.type == "rabbitmq" %}
input {
  rabbitmq {
    host => "{{ item.host }}"
{%       if item.exchange is defined %}
    exchange => "{{ item.exchange }}"
{%       endif %}
  }
}
{%     endif %}
{%   endfor %}
{% endif %}
